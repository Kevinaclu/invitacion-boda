<div id="clock" class="mb-4">
  <div class="flex flex-row space-x-4">
    <div
      id="days"
      class="w-20 h-16 bg-slate-400 text-2xl items-center justify-center flex text-white"
    >
      00
    </div>
    <div
      id="hours"
      class="w-20 h-16 bg-slate-400 text-2xl items-center justify-center flex text-white"
    >
      00
    </div>
    <div
      id="minutes"
      class="w-20 h-16 bg-slate-400 text-2xl items-center justify-center flex text-white"
    >
      00
    </div>
    <div
      id="seconds"
      class="w-20 h-16 bg-slate-400 text-2xl items-center justify-center flex text-white"
    >
      00
    </div>
  </div>
  <div class="flex flex-row space-x-4 mt-2 bg-slate-400 text-white">
    <p class="w-20 text-center text-sm">Dias</p>
    <p class="w-20 text-center text-sm">Horas</p>
    <p class="w-20 text-center text-sm">Minutos</p>
    <p class="w-20 text-center text-sm">Segundos</p>
  </div>
</div>

<script>
  const eventDate = new Date("2024-10-05T17:30:00");
  const days = document.querySelector("#days");
  const hours = document.querySelector("#hours");
  const minutes = document.querySelector("#minutes");
  const seconds = document.querySelector("#seconds");

  function getRemainingTime() {
    const today = new Date();
    const diff = eventDate.getTime() - today.getTime();

    if (diff <= 0) {
      return;
    }

    const remainingDays = Math.floor(diff / 1000 / 60 / 60 / 24);
    const remainingHours = Math.floor(diff / 1000 / 60 / 60) % 24;
    const remainingMinutes = Math.floor(diff / 1000 / 60) % 60;
    const remainingSeconds = Math.floor(diff / 1000) % 60;

    if (days) {
      days.innerHTML =
        remainingDays < 10 ? `0${remainingDays}` : remainingDays.toString();
    }
    if (hours) {
      hours.innerHTML =
        remainingHours < 10 ? `0${remainingHours}` : remainingHours.toString();
    }
    if (minutes) {
      minutes.innerHTML =
        remainingMinutes < 10
          ? `0${remainingMinutes}`
          : remainingMinutes.toString();
    }

    if (seconds) {
      seconds.innerHTML =
        remainingSeconds < 10
          ? `0${remainingSeconds}`
          : remainingSeconds.toString();
    }
  }

  getRemainingTime();

  setInterval(() => {
    getRemainingTime();
  }, 1000);
</script>
