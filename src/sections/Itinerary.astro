---
import Card from "../components/Card.astro";
---

<section
  id="itinerary"
  class="w-full bg-white bg-[url(/perla2.jpg)] bg-top border-double border-b-8 border-[#A47E3B] relative h-auto"
>
  <div class="bg-white bg-opacity-50 w-full h-full absolute top-0"></div>
  <div class="relative flex flex-col items-center p-8 h-auto">
    <p class="font-loversQuarrel text-6xl">Itinerario</p>
    <div class="flex flex-col w-full">
      <Card>
        <p class="font-loversQuarrel text-4xl">Ceremonia Cristiana</p>
        <p class="text-start font-serif">
          6:30 pm <br />Salón HG
        </p>
      </Card>
      <Card>
        <p class="font-loversQuarrel text-4xl">Recepción</p>
        <p class="text-start font-serif">
          7:30 pm <br />Salón HG
        </p>
      </Card>
      <Card>
        <p class="font-loversQuarrel text-4xl">Primer baile de los novios</p>
        <p class="text-start font-serif">8:00 pm</p>
      </Card>
      <Card>
        <p class="font-loversQuarrel text-4xl">Cena</p>
        <p class="text-start font-serif">9:30 pm</p>
      </Card>
    </div>
  </div>
</section>
