---
import Layout from "../layouts/Layout.astro";
import Clock from "../components/Clock.astro";
---

<Layout title="Nuestra boda | Kevin & Aketzaly">
  <header
    class="flex flex-col items-center justify-between w-full min-h-screen bg-[url('/portada.jpg')] bg-no-repeat bg-cover bg-center"
  >
    <div id="title" class="text-center mt-16">
      <p class="text-lg uppercase tracking-widest">Nuestra boda</p>
      <p class="text-4xl">Kevin & Aketzaly</p>
      <p class="text-lg uppercase tracking-widest">05 de Octubre de 2024</p>
    </div>

    <Clock />
  </header>

  <section id="song" class="pt-8">
    <div class="flex flex-col">
      <div class="text-center">
        <p class="text-lg uppercase tracking-widest">Escucha nuestra canción</p>

        <div class="flex justify-center mt-4">
          <div class="w-64">
            <div class="relative">
              <audio controls class="w-full">
                <source src="path_to_audio_file.mp3" type="audio/mpeg" />
                Your browser does not support the audio element.
              </audio>
              <div class="absolute bottom-0 left-0 right-0 bg-gray-200">
                <div class="flex items-center justify-between px-4 py-2">
                  <div class="flex items-center space-x-2">
                    <div class="w-8 h-8 bg-gray-400"></div>
                    <div class="text-sm">Beautiful things - Benson Boone</div>
                  </div>
                  <div class="flex items-center space-x-2">
                    <div class="w-4 h-4 bg-gray-400"></div>
                    <div class="w-4 h-4 bg-gray-400"></div>
                    <div class="w-4 h-4 bg-gray-400"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="parents" class="mt-16">
    <div class="flex flex-col">
      <div class="text-center">
        <p class="text-lg uppercase tracking-widest">
          Con la bendición de Dios y nuestros padres
        </p>
      </div>
      <div class="flex flex-row justify-center mt-4">
        <div class="w-64">
          <div class="flex flex-col items-center">
            <div class="w-32 h-32 bg-gray-400 rounded-full"></div>
            <p class="mt-2 text-lg">Nombre papá novia</p>
            <p class="mt-2 text-lg">Nombre mamá novia</p>
          </div>
        </div>
        <div class="w-64">
          <div class="flex flex-col items-center">
            <div class="w-32 h-32 bg-gray-400 rounded-full"></div>
            <p class="mt-2 text-lg">Nombre papá novio</p>
            <p class="mt-2 text-lg">Nombre mamá novio</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="godparents" class="mt-16">
    <div class="flex flex-col">
      <div class="text-center">
        <p class="text-lg uppercase tracking-widest">Nuestros padrinos</p>
      </div>
      <div class="flex flex-row justify-center mt-4">
        <div class="w-64">
          <div class="flex flex-col items-center">
            <div class="w-32 h-32 bg-gray-400 rounded-full"></div>
            <p class="mt-2 text-lg">Nombre padrino</p>
            <p class="text-sm">Padrino</p>
          </div>
        </div>
        <div class="w-64">
          <div class="flex flex-col items-center">
            <div class="w-32 h-32 bg-gray-400 rounded-full"></div>
            <p class="mt-2 text-lg">Nombre madrina</p>
            <p class="text-sm">Madrina</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="itinerary"></section>
</Layout>
